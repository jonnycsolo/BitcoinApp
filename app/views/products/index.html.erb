

<div class="search">
	<input type="search" placeholder="Search Products" data-ng-model="searchTerm">
<span class="topHeadline">{{ searchTerm }} has {{filtered.length}} items</span>
</div>

<div class="left-sidebar">
	<label># of results </label>
</div>

<div>
	<ul class="products">
	  <li data-ng-repeat="product in filtered = ( products | filter: {name: searchTerm} )" class="product-listing reveal">
	      <img data-ng-src="http://gzcwheels.com/api/images/{{ product.image }}" alt="{{ product.name }}" class="product-image">
	      
		      <h3>{{ product.name }}</h3>
		      <p> {{ product.desc }}</p>
		      <h4>{{ product.price | currency }}</h4>

</div>
	 
	  </li>
	</ul>
</div>